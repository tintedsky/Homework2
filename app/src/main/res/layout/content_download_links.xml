<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.xiaoqian_niu.homework2.DownloadLinks"
    tools:showIn="@layout/activity_download_links">

    <EditText
        android:id="@+id/urlEdit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/urlEdit3"
        android:layout_alignStart="@+id/urlEdit3"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:title="input a http link here"
        android:summary="summary test?"
        android:width="300dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Set preferences that are \nURLs to 6 images"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#aaaaaa" />

    <EditText
        android:id="@+id/urlEdit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/urlEdit1"
        android:layout_alignStart="@+id/urlEdit1"
        android:layout_below="@+id/urlEdit1"
        android:layout_marginTop="10dp"
        android:width="300dp" />

    <EditText
        android:id="@+id/urlEdit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urlEdit2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp" />

    <EditText
        android:id="@+id/urlEdit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urlEdit3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp" />

    <EditText
        android:id="@+id/urlEdit5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urlEdit4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp" />

    <EditText
        android:id="@+id/urlEdit6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/urlEdit5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="300dp" />
</RelativeLayout>
