<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Choose URLs"
        android:textAllCaps="false"
        android:id="@+id/btChooseUrls"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_border"
        android:onClick="btChooseClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:id="@+id/btDownload"
        android:layout_marginTop="55dp"
        android:background="@drawable/button_border"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/btChooseUrls"
        android:layout_alignLeft="@+id/btChooseUrls"
        android:layout_alignStart="@+id/btChooseUrls"
        android:layout_alignRight="@+id/btChooseUrls"
        android:layout_alignEnd="@+id/btChooseUrls"
        android:onClick="btDownloadClicked" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:minWidth="300dp"
        android:minHeight="10dp"
        android:mirrorForRtl="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Pictures"
        android:background="@drawable/button_border"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:id="@+id/btViewPictures"
        android:layout_below="@+id/progressBar"
        android:layout_alignLeft="@+id/btDownload"
        android:layout_alignStart="@+id/btDownload"
        android:layout_marginTop="58dp"
        android:layout_alignRight="@+id/btDownload"
        android:layout_alignEnd="@+id/btDownload"
        android:onClick="btViewClicked" />

</RelativeLayout>
